<h1>Call details</h1>

<p>
  <strong>UniqueID:</strong>
  <%= @call.uniqueid %>
</p>

<p>
  <strong>Created At:</strong>
  <%= @call.created_at %>
</p>
<p>

<p>
  <strong>Ended At:</strong>
  <%= @call.ended_at %>
</p>

<p>
  <strong>Answered At:</strong>
  <%= @call.answered_at %>
</p>
<p>
  <strong>Joined At:</strong>
  <%= @call.joined_at %>
</p>
<p>
  <strong>Unjoined At:</strong>
  <%= @call.unjoined_at %>
</p>
<p>
  <strong>From:</strong>
  <%= @call.from %>
</p>
<p>
  <strong>To:</strong>
  <%= @call.to %>
</p>
<p>
  <strong>Kind:</strong>
  <%= @call.kind %>
</p>
<p>
  <strong>Recorded:</strong>
  <%= @call.recorded %>
</p>
<p>
  <strong>Duration:</strong>
  <%= Time.diff( @call.ended_at, @call.answered_at, '%H %N %S' )[ :diff ] if !@call.ended_at.nil? && !@call.answered_at.nil? %>
</p>

<p>
  <%= link_to "View All", calls_path %>
</p>
