= form_for @group do |f|
  - if @group.errors.any?
    #error_explanation
      h2 = "#{pluralize(@group.errors.count, "error")} prohibited this group from being saved:"
      ul
        - @group.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :musiconhold
    = f.text_field :musiconhold
  .field
    = f.label :strategy
    = f.text_field :strategy
  .field
    = f.label :timeout
    = f.number_field :timeout
  .field
    = f.label :retry
    = f.number_field :retry
  .actions = f.submit 'Save'
