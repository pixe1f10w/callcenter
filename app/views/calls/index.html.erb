<h2>Listing calls</h2>

<%= will_paginate %>

<table class='span7 table table-striped table-centered' style='text-align: center'>
  <tr>
    <th>UniqueID</th>
    <th>Created At</th>
    <th>Ended At</th>
    <th>Answered At</th>
    <th>Joined At</th>
    <th>Unjoined At</th>
    <th>From</th>
    <th>To</th>
    <th>Kind</th>
    <th>Recorded</th>
    <th>Duration</th>
  </tr>

  <% for call in @calls %>
    <tr>
      <td><%= call.uniqueid %></td>
      <td><%= call.created_at %></td>
      <td><%= call.ended_at %></td>
      <td><%= call.answered_at %></td>
      <td><%= call.joined_at %></td>
      <td><%= call.unjoined_at %></td>
      <td><%= call.from %></td>
      <td><%= call.to %></td>
      <td><%= call.kind %></td>
      <td><%= call.recorded %></td>
      <td><%= Time.diff( call.ended_at, call.answered_at )[ :diff ] if !call.ended_at.nil? && !call.answered_at.nil? %></td>
      <td><%= link_to "Details", call %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate %>
